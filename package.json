{
  "name": "project-root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:server": "nodemon --watch server/src --exec ts-node -r module-alias/register server/src/index.ts",
    "dev:client": "cd client && npm start",
    "build:server": "cd server && tsc",
    "build:client": "cd client && npm run build",
    "start:server": "node -r module-alias/register server/dist/index.js",
    "format": "prettier --write \"{server,client}/src/**/*.{js,ts,json,css,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "module-alias": "^2.2.3",
    "mongoose": "^8.7.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.8.1",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "prettier": "^3.3.3",
    "husky": "^8.0.0",
    "lint-staged": "^12.0.0"
  },
  "lint-staged": {
    "{server,client}/src/**/*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}