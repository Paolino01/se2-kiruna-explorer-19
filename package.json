{
  "name": "kiruna-explorer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "format": "prettier --write \"{server,client}/src/**/*.{js,ts,json,css,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.7.3",
    "react-drag-drop-files": "^2.4.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.8.1",
    "husky": "^8.0.3",
    "lint-staged": "^12.5.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{server,client}/src/**/*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
